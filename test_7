#include<stdio.h>
int main()
{
	int day = 0;
	while (day < 365)
	{
		printf("我要好好学习：第%d天\n", day);
		day++;
	}
	if(day==365)
	{
		printf("在第%d天学成归来", day);
	}
	return 0;
}
